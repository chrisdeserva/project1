<div class="row" ng-controller="SearchCtrl">
    <div class="col-md-6 col-md-offset-3" ui-view="header">
        <h1 id="header"><a href="<%= home %>">Header</a></h1>

        <form action="/search" method="get" accept-charset="utf-8">
            <input type="text" placeholder="Search item" name="search" id="search" class="form-control" ng-model="searchString" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <a href="#/signup">Sign up</a>
        <a href="#/login">Login</a>
    </div>
</div>
